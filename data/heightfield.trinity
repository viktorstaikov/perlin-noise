GlobalSettings {
	frameWidth      1024
	frameHeight     768
	ambientLight    (0.25, 0.25, 0.25)
}

PointLight sun {
	pos	(6000, 2000, -30)
	power  50000000
	color      (1, 1, 1)
}

// Island - sunset view
Camera camera {
	pos      (100, 80, 600)
	aspect   1.33333
	yaw      -153
	pitch   -15
	roll     0
	fov      105
}

