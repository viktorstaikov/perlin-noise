CubemapEnvironment {
	folder "env/ocean"
}

Plane water {
}

Bumps waterBumps {
	strength 0.2
}

Lambert ocean_floor {
	color  (0.1448, 0.4742, 0.6804)
}

Plane ocean_floor {
	y 9.2
	limit 3000
}

Node ocean_floor {
	geometry ocean_floor
	shader ocean_floor
}

Refraction refr_water {
	ior 1.33
	color (0.9, 0.9, 0.9)
}

Fresnel fresnel {
	ior 1.33
}

Reflection refl {
	color (0.9, 0.9, 0.9)
}

Layered water {
	layer refr_water (1, 1, 1)
	layer refl (1, 1, 1) fresnel
}

Node water {
	geometry water
	bump waterBumps
	shader water
	translate (0, 32.5, 0)
	scale (3, 3, 3)
}

BitmapTexture bmp {
	file "texture/hf_color.bmp"
}

Lambert island_shader {
	color (1, 1, 1)
	texture bmp
}

Heightfield island {
	file "texture/heightfield.bmp"
	blur 2.5
	useOptimization true
}

Node island {
	geometry island
	shader island_shader
	scale (1, 200, 1)
}

